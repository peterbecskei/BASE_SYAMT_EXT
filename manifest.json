
{
  "manifest_version": 3,
  "name": "SYMAT Script ",
  "version": "1.0.0",
  "description": "SYMAT Script.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "sidePanel", "storage", "contextMenus", "activeTab", "tabs"]  ,
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Tab HTML Saver",
    "default_popup": "popup.html"

  },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["sidebar.js"]
     
    }
  ],
 "web_accessible_resources": [{
    "resources": ["script.js"],
    "matches": ["<all_urls>"]
  }]
}

